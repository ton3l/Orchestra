<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="0"
                android:startColor="@color/design_default_gradient_1"
                android:centerColor="@color/design_default_gradient_2"
                android:endColor="@color/design_default_gradient_3"
                android:type="linear"
            />
            <corners android:radius="6dp"/>
        </shape>
    </item>

    <item android:top="2dp" android:left="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/background_dark"/>
            <corners android:radius="4dp"/>
        </shape>
    </item>
</layer-list>
